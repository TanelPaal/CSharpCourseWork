@page
@model WebApp.Pages.Recipes.TopRated.IndexModel
@{
    ViewData["Title"] = "Top Rated Recipes";
}

<div class="container">
    <h1 class="mb-4">üèÜ Top Rated Recipes</h1>
    
    @if (!Model.TopRecipes.Any())
    {
        <div class="alert alert-info">
            No rated recipes yet. Why not <a asp-page="/Recipes/Roulette">spin the wheel</a>?
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var recipe in Model.TopRecipes)
            {
                <div class="col">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(recipe.ImageUrl))
                        {
                            <img src="@recipe.ImageUrl" class="card-img-top" alt="@recipe.Title">
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title">@recipe.Title</h5>
                                <span class="badge bg-primary">
                                    ‚≠ê @recipe.AverageRating.ToString("F1")
                                </span>
                            </div>
                            <p class="card-text">@recipe.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">‚è±Ô∏è @recipe.PrepTimeMinutes min</small>
                                <small class="text-muted">
                                    @recipe.Ratings.Count rating@(recipe.Ratings.Count != 1 ? "s" : "")
                                </small>
                            </div>
                            <div class="mt-3">
                                <a asp-page="../Browse/Details" asp-route-id="@recipe.Id" 
                                   class="btn btn-primary">View Recipe</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div> 