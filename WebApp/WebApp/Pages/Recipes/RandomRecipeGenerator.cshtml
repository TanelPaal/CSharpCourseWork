@page
@model WebApp.Pages.Recipes.RandomRecipeGeneratorModel
@{
    ViewData["Title"] = "Random Recipe Generator";
}

<div class="text-center">
    <h1 class="display-4">üé≤ Random Recipe Generator üé≤</h1>
    <p class="lead">Generate wild and wacky recipes automatically!</p>

    <form method="post" class="mb-5">
        <button type="submit" class="btn btn-lg btn-warning">
            üéØ Generate Random Recipe
        </button>
    </form>

    @if (Model.GeneratedRecipe != null)
    {
        <div class="card mx-auto" style="max-width: 600px;">
            @if (!string.IsNullOrEmpty(Model.GeneratedRecipe.ImageUrl))
            {
                <img src="@Model.GeneratedRecipe.ImageUrl" class="card-img-top" alt="@Model.GeneratedRecipe.Title">
            }
            <div class="card-body">
                <h2 class="card-title">@Model.GeneratedRecipe.Title</h2>
                <p class="card-text">@Model.GeneratedRecipe.Description</p>
                
                <div class="mb-3">
                    <h5>Ingredients:</h5>
                    <ul class="list-group list-group-flush">
                        @foreach (var ingredient in Model.GeneratedRecipe.RecipeIngredients)
                        {
                            <li class="list-group-item">
                                @ingredient.Quantity of @ingredient.Ingredient.Name
                            </li>
                        }
                    </ul>
                </div>

                <div class="mb-3">
                    <h5>Instructions:</h5>
                    <div class="recipe-instructions">
                        @{
                            var instructions = Model.GeneratedRecipe.Instructions.Split(
                                new[] { "\r\n", "\r", "\n" },
                                StringSplitOptions.None
                            );
                            
                            <ol class="list-group list-group-numbered">
                                @foreach (var step in instructions)
                                {
                                    if (!string.IsNullOrWhiteSpace(step))
                                    {
                                        <li class="list-group-item">@step</li>
                                    }
                                }
                            </ol>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <span>‚è±Ô∏è Prep Time: @Model.GeneratedRecipe.PrepTimeMinutes minutes</span>
                </div>
                
                <div class="mt-3">
                    <form method="post" asp-page-handler="Save">
                        <input type="hidden" asp-for="GeneratedRecipe.Title" />
                        <input type="hidden" asp-for="GeneratedRecipe.Description" />
                        <input type="hidden" asp-for="GeneratedRecipe.Instructions" />
                        <input type="hidden" asp-for="GeneratedRecipe.PrepTimeMinutes" />
                        <input type="hidden" asp-for="GeneratedRecipe.ImageUrl" />
                        @foreach (var ingredient in Model.GeneratedRecipe.RecipeIngredients)
                        {
                            <input type="hidden" name="IngredientIds" value="@ingredient.IngredientId" />
                            <input type="hidden" name="Quantities" value="@ingredient.Quantity" />
                        }
                        <button type="submit" class="btn btn-success">Save This Recipe</button>
                        <button type="submit" asp-page-handler="Generate" class="btn btn-outline-primary">Generate Another</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div> 