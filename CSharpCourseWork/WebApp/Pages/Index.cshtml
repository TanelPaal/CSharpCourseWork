@page
@model IndexModel
@{
    ViewData["Title"] = "Main Menu";
    Layout = null;
}

<h1 class="menu-title">Welcome to Tic-Tac-Two</h1>

<div class="menu-container">
    <form method="post" class="join-game-form" onsubmit="saveUsername()">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">
                @Model.ErrorMessage
            </div>
        }

        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required class="input-field" />
        <button type="submit" name="action" value="Login" class="menu-button">Login</button>
    </form>
</div>

<script>
    function saveUsername() {
        const username = document.getElementById('username').value;
        window.location.href = `/Dashboard?username=${encodeURIComponent(username)}`;
    }

</script>

<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .menu-title {
        text-align: center;
        margin-top: 40px;
        color: #333;
        font-size: 2.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .menu-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh;
        padding: 20px;
    }

    .join-game-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        min-width: 300px;
    }

    .input-field {
        width: 100%;
        margin-bottom: 20px;
        padding: 12px;
        font-size: 16px;
        border: 2px solid #ddd;
        border-radius: 8px;
        transition: border-color 0.3s ease;
    }

    .input-field:focus {
        outline: none;
        border-color: #4CAF50;
    }

    .menu-button {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 12px 30px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 8px;
        transition: all 0.3s ease;
        width: 100%;
    }

    .menu-button:hover {
        background-color: white;
        color: black;
        border: 2px solid #4CAF50;
    }

    .error-message {
        color: #dc3545;
        margin-bottom: 15px;
        padding: 10px;
        border-radius: 5px;
        background-color: rgba(220, 53, 69, 0.1);
        width: 100%;
        text-align: center;
    }

    label {
        align-self: flex-start;
        margin-bottom: 8px;
        color: #666;
        font-weight: 500;
    }
</style>